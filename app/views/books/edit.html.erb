<div class="container">
  <div class="row">
  <div class="col-3"></div>
  <div class="col-6">
    <h1>Editing Book</h1>
    <div>
    <%= form_for(@book) do |f| %>
      <label class="d-block w-100">Title
      <%= f.text_field :title, class:"d-block w-100" %>
      </label>
      <label class="d-block w-100">Opinion
      <%= f.text_area :body, class:"d-block w-100" %>
      </label>
      <h4>タグ</h4>
      <div class="tags">
        <%= f.fields_for :tags do |tag| %>
          <%= render 'layouts/tag_fields', :f => tag %>
        <% end %>
        <%= link_to_add_association 'タグを追加', f, :tags,partial: 'layouts/tag_fields' %>
      </div>
      <%= f.submit class:"btn btn-primary btn-block"  %>
    <% end %>
    </div>
  <%= link_to "show", book_path(@book.id)%> | <%= link_to "Back", books_path %>
    </div>
    <div class="col-3"></div>
  </div>
</div>